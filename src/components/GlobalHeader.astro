---
export interface Props {
  pageTitle: string
}

const { pageTitle } = Astro.props;

const menus:{id:number, name:string, path:string, indent:sting}[] = [
    {id: 1, name: 'Solunita Tools(TOP)', path: '/', indent:'pl-3' },
    {id: 2, name: 'WILDHEARTS 防具シミュレータ', path: '/wildhearts/armor-sim', indent:'pl-3' },
    {id: 3, name: '使い方 & FAQ', path: '/wildhearts/armor-sim/guide', indent:'pl-8' },
    {id: 4, name: '更新履歴', path: '/wildhearts/armor-sim/changelog', indent:'pl-8' },
    {id: 5, name: 'ご意見/ご要望', path: '/feedback', indent:'pl-3' },
    {id: 6, name: '利用規約', path: '/term-of-service', indent:'pl-3' }
  ]
---
<nav class="bg-white border-gray-200 px-2 md:px-4 py-2.5 dark:bg-gray-900 shadow-md">
  <div class="flex flex-wrap items-center justify-between max-w-screen-xl mx-auto">
    <!-- logo -->
    <a href="https://tools.solunita.net" class="flex items-center">
      <img src="/assets/site_logo.png" class="w-8 h-8 md:w-10 md:h-10" alt="Logo" />
    </a>
    <!-- title -->
    <h1 class="self-center text-base md:text-xl font-semibold whitespace-pre-wrap dark:text-white w-4/6">
      {pageTitle}
    </h1>
    <!-- menu button -->
    <div class="flex items-center">
      <button data-collapse-toggle="mega-menu" type="button" class="inline-flex items-center p-2 ml-1 text-sm text-gray-500 rounded-lg hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="mega-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg aria-hidden="true" class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
      </button>
    </div>
    <!-- menus -->
    <div id="mega-menu" class="items-center justify-between hidden w-full text-sm">
      <ul class="flex flex-col mt-4 font-medium">
        {menus.map((item) => (
          <li>
            <a href={item.path} class={`${item.indent} block py-2 pr-4 text-blue-600 border-b border-gray-100 hover:bg-gray-50`}>
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</nav>
